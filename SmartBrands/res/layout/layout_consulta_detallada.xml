<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConsultaDetallada" >

    <TextView
        android:id="@+id/lblUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/lblAlmacen" />

    <Spinner
        android:id="@+id/cboAlmacenConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblUrl"
        android:layout_below="@+id/lblUrl" />

    <Spinner
        android:id="@+id/cboUbicacionConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblUbicacionConsulta"
        android:layout_below="@+id/lblUbicacionConsulta" />

    <TextView
        android:id="@+id/lblUbicacionConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cboAlmacenConsulta"
        android:layout_below="@+id/cboAlmacenConsulta"
        android:text="@string/lblUbicacion" />

    <TextView
        android:id="@+id/lblProductoConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cboUbicacionConsulta"
        android:layout_below="@+id/cboUbicacionConsulta"
        android:text="@string/lblProducto" />

    <EditText
        android:id="@+id/txtProductoConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblProductoConsulta"
        android:layout_below="@+id/lblProductoConsulta"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>